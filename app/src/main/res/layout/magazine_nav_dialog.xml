<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/magazine_nav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/magazine_nav_title"
        android:textSize="@dimen/magazine_reader_nav_text_size"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/magazine_nav_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMagazineNav" />

</LinearLayout>