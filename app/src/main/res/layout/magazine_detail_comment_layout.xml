<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="@dimen/magazine_detail_margin_top"
    android:paddingBottom="@dimen/magazine_detail_margin_bottom"
    android:paddingLeft="@dimen/magazine_detail_margin_left"
    android:paddingRight="@dimen/magazine_detail_margin_right">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/magazine_comment_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/avatar_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/magazine_detail_margin_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/magazine_comment_avatar"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/magazine_comment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/magazine_detail_title_text_size"
            android:lines="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magazine_detail_comment_text_margin_top"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/magazine_comment_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/magazine_detail_title_publish_text_size"
                android:lines="1"/>
            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/magazine_comment_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magazine_detail_margin_left"
                android:max="5"
                android:numStars="5"
                android:stepSize="0.5"
                style="@style/AppRatingBar"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/magazine_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magazine_detail_comment_text_margin_top"
            android:textSize="@dimen/magazine_detail_title_publish_text_size"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>